  "timezone": "browser",
  "templating": {
    "list": [
      {
        "name": "host",
        "type": "query",
        "datasource": "VictoriaMetrics (Long-term)",
        "query": "label_values(node_rapl_package_joules_total, source_host)",
        "refresh": 1,
        "includeAll": true,
        "multi": true,
        "current": {
          "selected": true,
          "text": "All",
          "value": "$__all"
        }
      }
    ]
  },
