      "id": 1,
      "gridPos": {
        "h": 10,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "datasource": "VictoriaMetrics (Long-term)",
      "targets": [
        {
          "expr": "sum by (source_host) (rate(node_rapl_package_joules_total{source_host=~\"$host\"}[$__rate_interval]))",
          "legendFormat": "{{source_host}}",
          "refId": "A"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "bottom",
          "showLegend": true,
          "calcs": [
            "mean",
