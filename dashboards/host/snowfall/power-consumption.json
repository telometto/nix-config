{
  "title": "Power Consumption",
  "uid": "power-consumption",
  "description": "Real-time and historical power monitoring for CPU (RAPL) and GPU (hwmon)",
  "tags": [
    "power",
    "amd",
    "rapl",
    "monitoring"
  ],
  "editable": true,
  "schemaVersion": 38,
  "refresh": "5s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timezone": "browser",
  "panels": [
    {
      "title": "Current CPU Power",
      "type": "stat",
      "id": 1,
      "gridPos": {
        "h": 4,
        "w": 4,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "sum(rate(node_rapl_package_joules_total{instance=~\"$instance\"}[$__rate_interval]))",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ]
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "watt",
          "decimals": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 80
              },
              {
                "color": "orange",
                "value": 120
              },
              {
                "color": "red",
                "value": 160
              }
            ]
          }
        }
      }
    },
    {
      "title": "Current GPU Power",
      "type": "stat",
      "id": 2,
      "gridPos": {
        "h": 4,
        "w": 4,
        "x": 4,
        "y": 0
      },
      "targets": [
        {
          "expr": "sum(node_hwmon_power_average_watt{instance=~\"$instance\", sensor=\"power1\"}) or vector(0)",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ]
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "watt",
          "decimals": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 100
              },
              {
                "color": "orange",
                "value": 180
              },
              {
                "color": "red",
                "value": 250
              }
            ]
          }
        }
      }
    },
    {
      "title": "Total System Power",
      "type": "stat",
      "id": 3,
      "gridPos": {
        "h": 4,
        "w": 4,
        "x": 8,
        "y": 0
      },
      "targets": [
        {
          "expr": "sum(rate(node_rapl_package_joules_total{instance=~\"$instance\"}[$__rate_interval])) + (sum(node_hwmon_power_average_watt{instance=~\"$instance\", sensor=\"power1\"}) or vector(0))",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ]
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "watt",
          "decimals": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 150
              },
              {
                "color": "orange",
                "value": 300
              },
              {
                "color": "red",
                "value": 450
              }
            ]
          }
        }
      }
    },
    {
      "title": "Estimated Daily Cost",
      "type": "stat",
      "id": 4,
      "gridPos": {
        "h": 4,
        "w": 3,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "expr": "(sum(rate(node_rapl_package_joules_total{instance=~\"$instance\"}[$__rate_interval])) + (sum(node_hwmon_power_average_watt{instance=~\"$instance\", sensor=\"power1\"}) or vector(0))) / 1000 * 24 * scalar(electricity_price_nok_per_kwh{tax=\"incl_mva\"})",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ]
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "currencyNOK",
          "decimals": 2,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 10
              },
              {
                "color": "red",
                "value": 25
              }
            ]
          }
        }
      }
    },
    {
      "title": "Current Price",
      "type": "stat",
      "id": 11,
      "gridPos": {
        "h": 4,
        "w": 3,
        "x": 15,
        "y": 0
      },
      "targets": [
        {
          "expr": "electricity_price_nok_per_kwh{tax=\"incl_mva\"}",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ]
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "NOK/kWh",
          "decimals": 2,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 0.9
              },
              {
                "color": "orange",
                "value": 1.1
              },
              {
                "color": "red",
                "value": 1.2
              }
            ]
          }
        }
      }
    },
    {
      "title": "CPU Power - Averages",
      "type": "stat",
      "id": 5,
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 0,
        "y": 4
      },
      "targets": [
        {
          "expr": "avg_over_time(sum(rate(node_rapl_package_joules_total{instance=~\"$instance\"}[1m]))[1h:])",
          "legendFormat": "1h avg",
          "refId": "A"
        },
        {
          "expr": "avg_over_time(sum(rate(node_rapl_package_joules_total{instance=~\"$instance\"}[1m]))[24h:])",
          "legendFormat": "24h avg",
          "refId": "B"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ]
        },
        "orientation": "horizontal"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "watt",
          "decimals": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "blue",
                "value": null
              }
            ]
          }
        }
      }
    },
    {
      "title": "GPU Power - Averages",
      "type": "stat",
      "id": 6,
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 6,
        "y": 4
      },
      "targets": [
        {
          "expr": "avg_over_time(sum(node_hwmon_power_average_watt{instance=~\"$instance\", sensor=\"power1\"})[1h:]) or vector(0)",
          "legendFormat": "1h avg",
          "refId": "A"
        },
        {
          "expr": "avg_over_time(sum(node_hwmon_power_average_watt{instance=~\"$instance\", sensor=\"power1\"})[24h:]) or vector(0)",
          "legendFormat": "24h avg",
          "refId": "B"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ]
        },
        "orientation": "horizontal"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "watt",
          "decimals": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "purple",
                "value": null
              }
            ]
          }
        }
      }
    },
    {
      "title": "Total - Averages",
      "type": "stat",
      "id": 7,
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 12,
        "y": 4
      },
      "targets": [
        {
          "expr": "avg_over_time(sum(rate(node_rapl_package_joules_total{instance=~\"$instance\"}[1m]))[1h:]) + (avg_over_time(sum(node_hwmon_power_average_watt{instance=~\"$instance\", sensor=\"power1\"})[1h:]) or vector(0))",
          "legendFormat": "1h avg",
          "refId": "A"
        },
        {
          "expr": "avg_over_time(sum(rate(node_rapl_package_joules_total{instance=~\"$instance\"}[1m]))[24h:]) + (avg_over_time(sum(node_hwmon_power_average_watt{instance=~\"$instance\", sensor=\"power1\"})[24h:]) or vector(0))",
          "legendFormat": "24h avg",
          "refId": "B"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ]
        },
        "orientation": "horizontal"
      },
      "fieldConfig": {
        "defaults": {
          "unit": "watt",
          "decimals": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "orange",
                "value": null
              }
            ]
          }
        }
      }
    },
    {
      "title": "Power Consumption Over Time",
      "type": "timeseries",
      "id": 8,
      "gridPos": {
        "h": 10,
        "w": 24,
        "x": 0,
        "y": 8
      },
      "targets": [
        {
          "expr": "sum(rate(node_rapl_package_joules_total{instance=~\"$instance\"}[$__rate_interval]))",
          "legendFormat": "CPU",
          "refId": "A"
        },
        {
          "expr": "sum(node_hwmon_power_average_watt{instance=~\"$instance\", sensor=\"power1\"}) or vector(0)",
          "legendFormat": "GPU",
          "refId": "B"
        },
        {
          "expr": "sum(rate(node_rapl_package_joules_total{instance=~\"$instance\"}[$__rate_interval])) + (sum(node_hwmon_power_average_watt{instance=~\"$instance\", sensor=\"power1\"}) or vector(0))",
          "legendFormat": "Total",
          "refId": "C"
        }
      ],
      "options": {
        "legend": {
          "calcs": [
            "mean",
            "max",
            "lastNotNull"
          ],
          "displayMode": "table",
          "placement": "bottom"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "watt",
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 15,
            "gradientMode": "opacity",
            "showPoints": "never",
            "spanNulls": true
          }
        },
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "CPU"
            },
            "properties": [
              {
                "id": "color",
                "value": {
                  "fixedColor": "blue",
                  "mode": "fixed"
                }
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "GPU"
            },
            "properties": [
              {
                "id": "color",
                "value": {
                  "fixedColor": "purple",
                  "mode": "fixed"
                }
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "Total"
            },
            "properties": [
              {
                "id": "color",
                "value": {
                  "fixedColor": "orange",
                  "mode": "fixed"
                }
              },
              {
                "id": "custom.lineStyle",
                "value": {
                  "dash": [
                    10,
                    10
                  ],
                  "fill": "dash"
                }
              }
            ]
          }
        ]
      }
    },
    {
      "title": "CPU Core Power",
      "type": "timeseries",
      "id": 9,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 18
      },
      "targets": [
        {
          "expr": "sum by (index) (rate(node_rapl_core_joules_total{instance=~\"$instance\"}[$__rate_interval]))",
          "legendFormat": "Core {{index}}",
          "refId": "A"
        }
      ],
      "options": {
        "legend": {
          "calcs": [
            "mean",
            "lastNotNull"
          ],
          "displayMode": "table",
          "placement": "bottom"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "watt",
          "custom": {
            "lineWidth": 1,
            "fillOpacity": 10,
            "showPoints": "never"
          }
        }
      }
    },
    {
      "title": "Energy Consumed (Cumulative)",
      "type": "timeseries",
      "id": 10,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 18
      },
      "targets": [
        {
          "expr": "sum(increase(node_rapl_package_joules_total{instance=~\"$instance\"}[$__range])) / 3600000",
          "legendFormat": "CPU (kWh)",
          "refId": "A"
        },
        {
          "expr": "(sum(node_hwmon_power_average_watt{instance=~\"$instance\", sensor=\"power1\"}) or vector(0)) * $__range_s / 3600000",
          "legendFormat": "GPU (kWh est.)",
          "refId": "B"
        }
      ],
      "options": {
        "legend": {
          "calcs": [
            "lastNotNull"
          ],
          "displayMode": "table",
          "placement": "bottom"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "kwatth",
          "decimals": 3,
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 20,
            "gradientMode": "scheme",
            "showPoints": "never"
          }
        }
      }
    },
    {
      "title": "Electricity Price History (NO2)",
      "type": "timeseries",
      "id": 12,
      "gridPos": {
        "h": 6,
        "w": 12,
        "x": 0,
        "y": 26
      },
      "targets": [
        {
          "expr": "electricity_price_nok_per_kwh{tax=\"incl_mva\"}",
          "legendFormat": "Price (incl. MVA)",
          "refId": "A"
        }
      ],
      "options": {
        "legend": {
          "calcs": [
            "mean",
            "min",
            "max",
            "lastNotNull"
          ],
          "displayMode": "table",
          "placement": "bottom"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "NOK/kWh",
          "decimals": 2,
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 15,
            "staircase": true,
            "showPoints": "never",
            "spanNulls": true
          },
          "color": {
            "mode": "palette-classic"
          }
        }
      }
    },
    {
      "title": "Cost Rate (kr/hour)",
      "type": "timeseries",
      "id": 13,
      "gridPos": {
        "h": 6,
        "w": 12,
        "x": 12,
        "y": 26
      },
      "targets": [
        {
          "expr": "(sum(rate(node_rapl_package_joules_total{instance=~\"$instance\"}[$__rate_interval])) + (sum(node_hwmon_power_average_watt{instance=~\"$instance\", sensor=\"power1\"}) or vector(0))) / 1000 * scalar(electricity_price_nok_per_kwh{tax=\"incl_mva\"})",
          "legendFormat": "Cost Rate",
          "refId": "A"
        }
      ],
      "options": {
        "legend": {
          "calcs": [
            "mean",
            "max",
            "lastNotNull"
          ],
          "displayMode": "table",
          "placement": "bottom"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "kr/h",
          "decimals": 2,
          "custom": {
            "lineWidth": 2,
            "fillOpacity": 20,
            "gradientMode": "opacity",
            "showPoints": "never",
            "spanNulls": true
          },
          "color": {
            "fixedColor": "green",
            "mode": "fixed"
          }
        }
      }
    },
    {
      "title": "Cost (Last Hour)",
      "type": "stat",
      "id": 14,
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 18,
        "y": 4
      },
      "targets": [
        {
          "expr": "(sum(increase(node_rapl_package_joules_total{instance=~\"$instance\"}[1h])) / 3600000 + (avg_over_time(sum(node_hwmon_power_average_watt{instance=~\"$instance\", sensor=\"power1\"})[1h:]) or vector(0)) * 3600 / 3600000) * scalar(electricity_price_nok_per_kwh{tax=\"incl_mva\"})",
          "refId": "A"
        }
      ],
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ]
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "currencyNOK",
          "decimals": 2,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 5
              },
              {
                "color": "orange",
                "value": 15
              },
              {
                "color": "red",
                "value": 30
              }
            ]
          }
        }
      }
    },
    {
      "title": "Daily Electricity Cost",
      "type": "barchart",
      "id": 15,
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 32
      },
      "targets": [
        {
          "expr": "(sum(increase(node_rapl_package_joules_total{instance=~\"$instance\"}[1d])) / 3600000 + (avg_over_time(sum(node_hwmon_power_average_watt{instance=~\"$instance\", sensor=\"power1\"})[1d:]) or vector(0)) * 86400 / 3600000) * scalar(electricity_price_nok_per_kwh{tax=\"incl_mva\"})",
          "legendFormat": "Daily Cost",
          "refId": "A",
          "interval": "1d"
        }
      ],
      "options": {
        "orientation": "vertical",
        "xTickLabelRotation": -45,
        "showValue": "auto",
        "barWidth": 0.8,
        "groupWidth": 0.7,
        "legend": {
          "displayMode": "hidden",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "single"
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "currencyNOK",
          "decimals": 2,
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "yellow",
                "value": 5
              },
              {
                "color": "orange",
                "value": 10
              },
              {
                "color": "red",
                "value": 20
              }
            ]
          },
          "custom": {
            "fillOpacity": 80,
            "gradientMode": "scheme"
          }
        }
      }
    },
    {
      "title": "Cost Heatmap (Weekly View)",
      "type": "heatmap",
      "id": 16,
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 40
      },
      "targets": [
        {
          "expr": "(sum(rate(node_rapl_package_joules_total{instance=~\"$instance\"}[$__rate_interval])) + (sum(node_hwmon_power_average_watt{instance=~\"$instance\", sensor=\"power1\"}) or vector(0))) / 1000 * scalar(electricity_price_nok_per_kwh{tax=\"incl_mva\"})",
          "legendFormat": "Cost Rate",
          "refId": "A"
        }
      ],
      "options": {
        "calculate": false,
        "cellGap": 1,
        "color": {
          "mode": "scheme",
          "scheme": "RdYlGn",
          "reverse": true,
          "fill": "opacity",
          "exponent": 0.5
        },
        "yAxis": {
          "axisPlacement": "left",
          "reverse": false
        },
        "tooltip": {
          "show": true,
          "yHistogram": false
        },
        "legend": {
          "show": true
        },
        "cellValues": {
          "decimals": 2
        }
      },
      "fieldConfig": {
        "defaults": {
          "unit": "kr/h",
          "custom": {
            "scaleDistribution": {
              "type": "linear"
            }
          }
        }
      }
    }
  ],
  "templating": {
    "list": [
      {
        "name": "datasource",
        "type": "datasource",
        "query": "prometheus",
        "current": {},
        "hide": 0,
        "label": "Datasource"
      },
      {
        "name": "instance",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "${datasource}"
        },
        "query": "label_values(up{job=\"node\"}, instance)",
        "current": {},
        "refresh": 2,
        "includeAll": true,
        "allValue": ".*",
        "label": "Instance",
        "hide": 0
      }
    ]
  },
  "annotations": {
    "list": []
  },
  "links": []
}
